        <script>
            $(document).ready(function() {
                $('#flash-message').show().delay(5000).fadeOut();
            });

            $('.slider').slider({
              formatter: function(value) {
                return '$' + value;
              }
            });

            function updatePrice(slider) {
              document.getElementById('maxPriceSpan').textContent = slider.value;
            }
        </script>
    {% endblock %}