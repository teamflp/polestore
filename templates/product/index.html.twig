                <div class="col mt-4">
                    <label for="max_price">Prix maximum :
                       <span id="maxPriceSpan" class="w-text-teal">{{ (search ? (search.maxPrice/100)|number_format(2, ',', '.') : (priceRange.max/100)|number_format(2, ',', '.')) ~ ' €' }}</span>
                    </label>
                    <input class="form-range rounded-pill w3-input w3-bar-item" type="range" name="maxPrice" id="max_price" min="{{ priceRange.min }}" max="{{ priceRange.max }}" value="{{ search ? (search.maxPrice/100)|number_format(2, ',',',') : (priceRange.max/100)|number_format(2, ',',',') }}" oninput="updatePrice(this)">
                </div>

                <button type="submit" class="btn w3-btn w3-teal w-100 mt-5">Filtrer</button>
            </form>
