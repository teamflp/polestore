{% extends 'base.html.twig' %}

{% block title %}Boutique poles : Confirmation{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        {% if app.flashes('success') is defined %}
            {% for message in app.flashes('success') %}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>{{ message }}</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% elseif app.flashes('warning') is defined %}
            {% for message in app.flashes('warning') %}
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <strong>{{ message }}</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endif %}
        <p>Nous vous remercions pour votre commande n° <b>{{ order.ref }}</b> passée le {{ order.createdAt|date('d/m/Y à H:i') }}.</p>

        <div class="col-md-6">
            <h3>Mon adresse de livraison:</h3>
            <p>{{ order.delivery|replace({'[br]' : '<br>'})|raw }}</p>
            <hr>
            <h3>Mon adresse de facturation:</h3>
            <p>{{ order.delivery|replace({'[br]' : '<br>'})|raw }}</p>
        </div>
        <div class="col-md-6">
            <h3>Commande : <b>{{ order.ref }}</b></h3><br><br>
        </div>
    </div>
</div>
{% endblock %}
