{% extends 'base.html.twig' %}

{% block title %}Mon compte : mes commandes{% endblock %}

{% block body %}
    <div class="container" style="margin-top: 100px">
        <h1>Ma commande</h1><hr>
        <a class="btn w3-teal" href="{{ path('app_account') }}">Retour à mon compte</a>

        <hr>

        <div class="row">
            <div class="col-md-12">
                <h3>Informations de la commande</h3>
                <p>
                    <strong>Statut de la commande: </strong>
                    {% if order.state == 1 %}
                        Paiement accepté
                    {% elseif order.state == 2 %}
                        Préparation en cours...
                    {% elseif order.state == 3 %}
                        Livraison en cours...
                    {% endif %}
                </p>
                <p><strong>Numéro de commande : </strong><span class="text-uppercase">{{ order.ref}}</span></p>
                <p><strong>Date de la commande : </strong>{{ order.createdAt | date('d/m/Y') }}</p>
                <p><strong>Votre serez livré(e) par : </strong>{{ order.carrierName }} </p>
            </div>
            <div class="col-md-12">
                <h3>Informations du produit</h3>
                <table class="table ">
                    <thead class="w3-teal">
                    <tr>
                        <th scope="col">Nom du produit</th>
                        <th>Quantité</th>
                        <th>Prix</th>
                        <th>Total</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for product in order.orderDetails %}
                        <tr>
                            <td>{{ product.product }}</td>
                            <td>{{ product.quantity }}</td>
                            <td>{{ (product.price/100)|number_format(2, ',', ',') }} €</td>
                            <td>{{ (product.total/100)|number_format(2, ',', ',') }} €</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="text-right mt-3">
                Sous-total : {{ (order.getTotal()/100)|number_format(2, ',', ',') }} €<br>
                Frais de livraison : {{ (order.getCarrierPrice()/100)|number_format(2, ',', ',') }} €<br>
                Total : {{ ((order.getTotal()+order.getCarrierPrice())/100)|number_format(2, ',', ',') }} €
            </div>
        </div>
    </div>
{% endblock %}